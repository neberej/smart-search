{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./electron-dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["electron/main.ts", "electron/preload.ts"]
}
